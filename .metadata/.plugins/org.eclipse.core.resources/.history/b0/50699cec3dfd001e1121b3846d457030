package java_first;

public class Practice5 {
	
	public double area(int a) {
		return a * a * Math.PI;
	}
	
	public double area(int a, int b, boolean isRectangle) {
		if(isRectangle = true) {
			return a * b;
		} else {
			return a * b / 2;
		}
	}
	
	public static void main(String[] args) {
		Practice5 calc = new Practice5();
		System.out.printf("반지름이 %d인 원의 넓이: %f", 5, calc.area(5));
		System.out.printf("가로 %d, 세로 %d인 직사각형의 넓이: %f", 4, 7, calc.area(4, 7, true));
		System.out.printf("밑변 %d, 높이 %d인 삼각형의 넓이: %f", 6, 3, calc.area(6, 3, false));

	}

}
