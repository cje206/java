package java_first;

public class Practice5 {
	
	public double area(int a) {
		return a * a * Math.PI;
	}
	
	public double area(int a, int b, String c) {
		if(c.equals("직사각형")) {
			return a * b;
		} else if(c.equals("삼각형")) {
			return a * b / 2;
		} else {
			return 0;
		}
	}
	
	public double area(int a, int b) {
		return a * b / 2;
	}

	public static void main(String[] args) {
		Practice5 calc = new Practice5();
		System.out.printf("반지름이 %d인 원의 넓이: %f", 5, calc.area(5));

	}

}
